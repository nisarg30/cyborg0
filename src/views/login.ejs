<!DOCTYPE html>
<html>
<head>
	<title>Login</title>
	<!-- <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"> -->
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js">
	</script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
	<link rel="stylesheet" href="./login.css">


	<script type="text/javascript">
		console.log("Hi")
		$(document).ready(function(){
			$( "#form1" ).submit(function(event) {
				event.preventDefault();
				console.log("Hi")
				$.ajax({
					type: 'POST',
					url: '/',
					data: $('#form1').serialize(),
					dataType: "json",
					success: function(response){
						//alert("a");
						console.log(response.Success);
						$('#form1')[0].reset();
						console.log(response)
						document.getElementById("check").innerHTML=response.Success;
         					//ADD THIS CODE
         				       setTimeout(function(){
         						   document.getElementById("check").innerHTML="";
         					   },3000);
         					if (response.Success=="You can login now.") {
								console.log("red")
         						document.getElementById("aa").click();
         					};
         				},
         				error: function() {
         				}
         			})
			});
		});
	</script>
</head>
<body>
	<div class="container">
        <div class="login">
            <div class="container">
                <h1>Log In</h1>
                <form id="form1" action="/profile" method="post">
						<input type="text" name="username" placeholder="Username" required="" class="form-control"><br/>
						<input type="password" name="password" placeholder="Password" required="" class="form-control"><br/>
						<input type="submit" value="Login" class="btn btn-success">
                </form>
				<div class="mssg bg-danger">
					<span id="check" ></span>
				</div>
                <div class="clearfix"></div>
				<div id="LangTable"><a href="/portu" id="aa"></a>
				</div>
				<div><span>Do you forgot password? </span><a href="/forgetpass">Click here</a>
					<div><span>Create a new Account? </span><a href="/reg">Register here</a>
           </div>
        </div>
      </div>
</body>
</html>